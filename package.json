{
  "name": "npm-script-start",
  "version": "1.2.0",
  "description": "A set of common build tasks written with npm scripts.",
  "author": "jackpanyj <https://github.com/jackpanyj>",
  "license": "MIT",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,img/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "uglify": "uglifyjs dist/js/es5/*.js -c -o dist/js/app.min.js",
    "es6": "babel src/js -d dist/js/es5 --presets es2015",
    "imagemin": "imagemin src/img/* -o dist/img",
    "svgs": "svgo -f src/img/svg -o dist/img/svg",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s scss autoprefixer",
    "build:js": "run-s es6 uglify",
    "build:img": "run-s imagemin svgs",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:img": "onchange \"src/img\" -- run-s build:img",
    "watch": "run-p serve watch:*",
    "start": "run-s build watch"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.12.8",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "svgo": "^0.6.6",
    "uglify-es": "^3.0.18"
  }
}

